<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1000.0" spacing="20.0" style="-fx-background-color: #F4F6F8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pbo.kelompok4.controller.UserDashboardController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="15.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5);">
         <children>
            <Label text="TICKAJA" textFill="#0984e3">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region prefWidth="30.0" />
            <VBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Hello," textFill="#636e72">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblWelcome" text="User Name">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleOrderHistory" prefHeight="40.0" style="-fx-background-color: #0984e3; -fx-cursor: hand; -fx-background-radius: 20; -fx-padding: 0 20;" text="Riwayat Pesanan" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" style="-fx-background-color: #dfe6e9; -fx-cursor: hand; -fx-background-radius: 20; -fx-padding: 0 20;" text="Logout" textFill="#636e72">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
      </HBox>

      <VBox spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Sedang Tayang" textFill="#2d3436">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
               <content>
                  <GridPane fx:id="filmContainer" alignment="TOP_CENTER" hgap="30.0" vgap="30.0">
                     <padding>
                        <Insets bottom="30.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
      </VBox>
   </children>
</VBox>