<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="900.0" spacing="15.0" style="-fx-background-color: #2d3436;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pbo.kelompok4.controller.BookingController">
   <children>
      <VBox alignment="CENTER" spacing="5.0">
         <children>
            <Label fx:id="lblJudulFilm" text="JUDUL FILM" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Label fx:id="lblInfoJadwal" text="Studio 1 - 14:00" textFill="#b2bec3">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </VBox>

      <VBox alignment="CENTER">
          <children>
              <Label alignment="CENTER" prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: #636e72; -fx-background-radius: 10 10 100 100; -fx-effect: dropshadow(three-pass-box, rgba(255,255,255,0.3), 20, 0, 0, 0);" text="LAYAR BIOSKOP" textFill="#dfe6e9">
                 <font>
                    <Font name="System Bold" size="14.0" />
                 </font>
              </Label>
          </children>
          <VBox.margin>
              <Insets bottom="30.0" />
          </VBox.margin>
      </VBox>

      <ScrollPane fitToHeight="true" fitToWidth="true" maxWidth="700.0" minHeight="350.0" style="-fx-background-color: transparent; -fx-background: transparent;">
         <content>
            <GridPane fx:id="gridKursi" alignment="CENTER" hgap="12.0" vgap="12.0" style="-fx-background-color: transparent;">
                </GridPane>
         </content>
      </ScrollPane>

      <HBox alignment="CENTER" maxWidth="700.0" spacing="20.0" style="-fx-background-color: #353b48; -fx-padding: 15; -fx-background-radius: 15;">
         <children>
            <Label text="Total Pembayaran:" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="lblTotalHarga" text="Rp 0" textFill="#00b894">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleKembali" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Batalkan" textFill="#ff7675">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnPesan" disable="true" mnemonicParsing="false" onAction="#handlePesan" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #0984e3; -fx-background-radius: 8; -fx-cursor: hand;" text="BAYAR SEKARANG" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" />
   </padding>
</VBox>