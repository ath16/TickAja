<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #F4F6F8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pbo.kelompok4.controller.FilmDetailController">
   <children>
      <HBox alignment="CENTER" spacing="40.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 5);">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <VBox alignment="CENTER" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
               <children>
                  <ImageView fx:id="imgPoster" fitHeight="400.0" fitWidth="280.0" pickOnBounds="true" preserveRatio="true" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>

            <VBox prefWidth="450.0" spacing="10.0">
               <children>
                  <Label fx:id="lblJudul" text="Judul Film" textFill="#2d3436" wrapText="true">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblDurasi" text="120 Menit" textFill="#0984e3">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <Label text="Sinopsis" textFill="#636e72">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextArea fx:id="txtDeskripsi" editable="false" prefHeight="100.0" prefWidth="450.0" style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-border-color: #dfe6e9; -fx-border-radius: 5;" text="Deskripsi..." wrapText="true" />

                  <VBox spacing="8.0" style="-fx-background-color: #f1f2f6; -fx-padding: 15; -fx-background-radius: 10;">
                     <children>
                        <Label text="Pilih Jadwal Tayang" textFill="#2d3436">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="comboJadwal" prefHeight="45.0" prefWidth="420.0" promptText="-- Pilih Jam Tayang --" style="-fx-background-color: white; -fx-background-radius: 8; -fx-font-size: 14;" />
                     </children>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </VBox>

                  <HBox alignment="CENTER_RIGHT" spacing="15.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleKembali" prefHeight="45.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Kembali" textFill="#636e72">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleBooking" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #0984e3; -fx-cursor: hand; -fx-background-radius: 8;" text="PESAN TIKET" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <effect>
                               </effect>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>