<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pbo.kelompok4.controller.LoginController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="LOGIN TICKAJA">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label text="Username" />
      <TextField fx:id="tfEmail" promptText="Masukkan Username Anda" />
      <Label text="Password" />
      <PasswordField fx:id="pfPassword" promptText="Masukkan Password" />
      <Button mnemonicParsing="false" onAction="#handleLogin" text="Masuk" />
      <Button mnemonicParsing="false" onAction="#handleToRegister" text="Belum punya akun? Daftar" textFill="#0d00ff" />
      <Label fx:id="lblError" textFill="RED" />
   </children>
</VBox>